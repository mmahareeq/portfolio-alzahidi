<div class="container">
  <% if notice %>
  <div class="notice alert alert-success mt-2 lert-dismissible fade show d-flex justify-content-between" role="alert">
  <%= notice %>
  <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
  </div>
  <% end %>

  <div class="d-flex justify-content-between mb-3">
    <h2 class="card-title fs-3"> <%= @admin_banner.name%></h2>
    <%= link_to t('global.banner.back_to_banners'), admin_banners_path, method: "get", class:"btn btn-outline-dark btn-sm custom-height"%>
  </div>
    <div>
      <% if @admin_banner.image.attached? %>
        <%= image_tag @admin_banner.image , alt: "cover_banner", style: "width: 100%; height: 30rem;"%>
      <% end %> 
      <p class="text-card"><%= @admin_banner.link %></p>

      <table class="table">
        <tr>
          <th><%= t ("global.banner.created_by") %></th>
          <td> </td>
          <th><%= t ("global.post.created_at") %> </th>
          <td>  </td>
        </tr>
      </table>
      <%= link_to t('global.post.edit'), edit_admin_banner_path(id: @admin_banner.id), method: "get" , class: "btn btn-primary btn-sm me-2" %> |
      <%= button_to t('global.banner.delete'), @admin_banner, method: "delete", data: {turbo_confirm: 'Are you sure? '}, class: "btn btn-danger btn-sm" %>
    </div>



</div>





