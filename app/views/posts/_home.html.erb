                    <h2 class=" col-12 card-title fs-5 text-center"> <%= post.title_en.present? ? post.title_en : post.title_ar%></h2>
                  <% else %>
                    <h2 class=" col-12 card-title fs-5 text-center"> <%= post.title_ar%></h2>
                  <% end %>
                </div>
